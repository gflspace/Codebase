{
  "credentials_required": [
    {
      "name": "Google Calendar - MiKO",
      "type": "googleCalendarOAuth2Api",
      "description": "OAuth2 credentials for Google Calendar access",
      "setup_instructions": {
        "step_1": "Go to Google Cloud Console (console.cloud.google.com)",
        "step_2": "Create a new project or select existing",
        "step_3": "Enable Google Calendar API",
        "step_4": "Create OAuth 2.0 credentials (Web application type)",
        "step_5": "Add n8n callback URL as authorized redirect URI",
        "step_6": "Copy Client ID and Client Secret to n8n"
      },
      "required_scopes": [
        "https://www.googleapis.com/auth/calendar",
        "https://www.googleapis.com/auth/calendar.events"
      ],
      "n8n_credential_fields": {
        "clientId": "YOUR_GOOGLE_CLIENT_ID",
        "clientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
      }
    },
    {
      "name": "Gmail - MiKO",
      "type": "gmailOAuth2",
      "description": "OAuth2 credentials for Gmail sending",
      "setup_instructions": {
        "step_1": "Use same Google Cloud project as Calendar",
        "step_2": "Enable Gmail API",
        "step_3": "Use same OAuth 2.0 credentials",
        "step_4": "Add required Gmail scopes"
      },
      "required_scopes": [
        "https://www.googleapis.com/auth/gmail.send",
        "https://www.googleapis.com/auth/gmail.compose"
      ],
      "n8n_credential_fields": {
        "clientId": "YOUR_GOOGLE_CLIENT_ID",
        "clientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
      }
    },
    {
      "name": "OpenAI - MiKO",
      "type": "openAiApi",
      "description": "OpenAI API key for AI chat responses",
      "setup_instructions": {
        "step_1": "Go to platform.openai.com",
        "step_2": "Create an API key",
        "step_3": "Copy the API key to n8n"
      },
      "n8n_credential_fields": {
        "apiKey": "YOUR_OPENAI_API_KEY"
      }
    }
  ],
  "environment_variables": {
    "N8N_HOST": "your-n8n-instance.com",
    "N8N_PROTOCOL": "https",
    "WEBHOOK_URL": "https://your-n8n-instance.com/webhook/chat"
  },
  "frontend_configuration": {
    "file": "src/config/index.js",
    "variables": {
      "VITE_N8N_WEBHOOK_URL": "https://your-n8n-instance.com/webhook/chat",
      "VITE_N8N_INSTANCE_ID": "your-instance-id",
      "VITE_GOOGLE_CLIENT_ID": "your-google-client-id.apps.googleusercontent.com",
      "VITE_GOOGLE_API_KEY": "your-google-api-key"
    }
  }
}
