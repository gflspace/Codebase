# QwickServices CIS Backend Configuration
# Copy to .env and fill in real values

# Server
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Database (PostgreSQL 14+)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qwick_cis_dev
DB_USER=cis_app_user
DB_PASSWORD=changeme_dev_password
DB_SSL=false

# JWT Authentication
JWT_SECRET=changeme_jwt_secret_at_least_32_chars
JWT_EXPIRES_IN=24h

# HMAC Service Auth (inter-service communication)
HMAC_SECRET=changeme_hmac_secret_at_least_32_chars

# Shadow Mode (true = detection+scoring active, enforcement disabled)
SHADOW_MODE=true

# Enforcement Kill Switch (true = all automated enforcement disabled)
ENFORCEMENT_KILL_SWITCH=false

# Logging
LOG_LEVEL=debug

# Dashboard URL (for CORS)
DASHBOARD_URL=http://localhost:3000

# External Services (placeholders)
STRIPE_API_KEY=sk_test_placeholder
EMAIL_SERVICE_URL=http://localhost:3002
OCR_SERVICE_URL=http://localhost:3003
