# VIOE Application Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# API Configuration
# ===========================================

# Backend API Mode:
#   'mock'     - Use in-memory mock data (default, no setup required)
#   'supabase' - Use Supabase as backend (requires configuration below)
VITE_API_MODE=mock

# ===========================================
# Supabase Configuration (required for supabase mode)
# ===========================================

# Your Supabase project URL
# Get this from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous/public key
# Get this from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# Legacy Base44 Configuration (deprecated)
# ===========================================

# Base44 App ID (not used - replaced by Supabase)
VITE_BASE44_APP_ID=

# Base44 API URL (not used - replaced by Supabase)
VITE_BASE44_API_URL=

# ===========================================
# Authentication
# ===========================================

# Auth Provider: 'mock', 'base44', 'oauth'
VITE_AUTH_PROVIDER=mock

# OAuth Configuration (if using OAuth)
VITE_OAUTH_CLIENT_ID=
VITE_OAUTH_AUTHORITY=
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/callback

# ===========================================
# Feature Flags
# ===========================================

# Enable demo mode with sample data
VITE_DEMO_MODE=true

# Enable AI features (auto-triage, insights, etc.)
VITE_AI_FEATURES_ENABLED=true

# Enable Jira integration
VITE_JIRA_INTEGRATION_ENABLED=false

# Enable Slack integration
VITE_SLACK_INTEGRATION_ENABLED=false

# ===========================================
# External Services
# ===========================================

# Jira Configuration
VITE_JIRA_BASE_URL=
VITE_JIRA_PROJECT_KEY=

# Slack Webhook URL
VITE_SLACK_WEBHOOK_URL=

# ===========================================
# Monitoring & Logging
# ===========================================

# Error tracking (Sentry)
VITE_SENTRY_DSN=

# Log level: 'debug', 'info', 'warn', 'error'
VITE_LOG_LEVEL=info

# ===========================================
# Development
# ===========================================

# API request delay in ms (for mock mode, simulates network latency)
VITE_MOCK_DELAY=100

# Enable React Query devtools
VITE_ENABLE_DEVTOOLS=true
